    THIS TEMPLATE CONTAINS A LOT OF CONDITIONALS

    I know, you're thinking: "Well duh, I already knew that!".
    It's to compensate for the variations we can get for the metadata block.
    To get some of the borders to line up between the top row and second row we've had to make this mess :'(
    -------------------------------------------------------------- --}}

        
{{#partial "block-intro-secondary"}}
        {{!-- METADATA --}}
    <div class="meta-wrap">
        <div class="wrapper">
            <div class="col-wrap">

                {{!-- First line of metadata --}}
                {{#if description.nationalStatistic}}
                    <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-12 col--lg-16{{else}}col--md-15 col--lg-18{{/if_all}} meta__item">
                        <span>{{labels.contact}}: </span></br>
                        <a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
                    </p>

                    <p class="col col--md-11 {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--lg-15{{else}}col--lg-14{{/if_all}} meta__item">
                        <span>{{labels.last-revised}}: </span><br/>{{df description.lastRevised}}
                    </p>

                    <p class="col col--md-11 {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--lg-15{{else}}col--lg-14{{/if_all}} meta__item">
                        <a href="/file?uri={{concat uri "/" (fn downloads.0.file)}}">{{downloads.0.title}}</a>
                        ({{fs (concat uri "/" (fn downloads.0.file))}} {{fe (concat uri "/" (fn downloads.0.file))}})
                    </p>

                {{else}}

                    <p class="col col--md-12 col--lg-15 meta__item">
                        <span>{{labels.contact}}: </span></br>
                        <a href="mailto:{{description.contact.email}}">{{#if description.contact.name}}{{description.contact.name}}{{else}}{{description.contact.email}}{{/if}}</a>
                    </p>

                    <p class="col col--md-12 col--lg-15 meta__item">
                        <span>{{labels.last-revised}}: </span><br/>{{df description.lastRevised}}
                    </p>

                    <p class="col col--md-12 col--lg-15 meta__item">
                        <a href="/file?uri={{concat uri "/" (fn downloads.0.file)}}">{{downloads.0.title}}</a>
                        ({{fs (concat uri "/" (fn downloads.0.file))}} {{fe (concat uri "/" (fn downloads.0.file))}})
                    </p>
                {{/if}}

            </div>
        </div>

        {{!-- Second line of metadata (Methodology background) --}}
		{{#if_any description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}
            <div class="wrapper">
                <h2 class="flush">{{labels.methodology-background}}</h2>

                <div class="col-wrap">
                    {{#if description.nationalStatistic}}

                        <div class="col col--md-4 {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--lg-5{{else}}col--lg-4{{/if_all}}">
                            <img class="meta__image padding-left padding-top--half" src="/img/national-statistics.png" alt="National Statistics logo"/>
                        </div>
                        {{#if description.surveyName}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-8 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.survey-name}}: </span><br/>
                                {{description.surveyName}}
                            </p>
                        {{/if}}
                        {{#if description.frequency}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-8 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.frequency}}: </span><br/>{{description.frequency}}
                            </p>
                        {{/if}}
                        {{#if description.compilation}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-8 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.how-compiled}}: </span><br/>{{description.compilation}}
                            </p>
                        {{/if}}
                        {{#if description.sampleSize}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-8 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item">
                                <span>{{labels.sample-size}}: </span><br/>
                                {{description.sampleSize}}
                            </p>
                        {{/if}}
                        {{#if description.geographicCoverage}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-8 col--lg-11{{else}}col--md-11 col--lg-14{{/if_all}} meta__item"> <span>{{labels.geographic-coverage}}: </span><br/>{{description.geographicCoverage}}
                            </p>
                        {{/if}}

                    {{else}}


                        {{#if description.surveyName}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-10 col--lg-12{{else}}col--md-12 col--lg-15{{/if_all}} meta__item">
                                <span>{{labels.survey-name}}: </span><br/>
                                {{description.surveyName}}
                            </p>
                        {{/if}}
                        {{#if description.frequency}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-12{{else}}col--md-12 col--lg-15{{/if_all}} meta__item">
                                <span>{{labels.frequency}}: </span><br/>{{description.frequency}}
                            </p>
                        {{/if}}
                        {{#if description.compilation}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-10 col--lg-12{{else}}col--md-12 col--lg-15{{/if_all}} meta__item">
                                <span>{{labels.how-compiled}}: </span><br/>{{description.compilation}}
                            </p>
                        {{/if}}
                        {{#if description.sampleSize}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-9 col--lg-12{{else}}col--md-12 col--lg-15{{/if_all}} meta__item">
                                <span>{{labels.sample-size}}: </span><br/>
                                {{description.sampleSize}}
                            </p>
                        {{/if}}
                        {{#if description.geographicCoverage}}
                            <p class="col {{#if_all description.surveyName description.frequency description.compilation description.sampleSize description.geographicCoverage}}col--md-10 col--lg-12{{else}}col--md-12 col--lg-15{{/if_all}} meta__item"> <span>{{labels.geographic-coverage}}: </span><br/>{{description.geographicCoverage}}
                            </p>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        {{/if_any}}
	</div>
{{/partial}}

{{#partial "block-content"}}

        <div class="wrapper">
            <div class="col-wrap">

                {{!-- MARKDOWN --}}
                <div class="col {{#if_any relatedDocuments relatedDatasets description.contact}}col--md-two-thirds col--lg-two-thirds{{/if_any}}">
                    <section class="section__content--static-markdown">
                        {{#each markdown}}
                            {{md this}}
                        {{/each}}
                    </section>

                    <div class="tiles__item tiles__item--nav-type col--md-31 col--lg-19 flush-col">
                        <h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.download-this-methodology}}</h3>

                        <div class="tiles__content--nav">
                            <ul class="list--neutral">
                                {{#each downloads}}
                                    <li class="flush--third--bottom">
                                        <a href="/file?uri={{concat uri "/" (fn file)}}">{{title}}</a> ({{fs (concat uri "/" (fn file))}} {{fe (concat uri "/" (fn file))}})
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>

                {{!-- 'RELATED' TILES --}}
                {{#if_any relatedDocuments relatedDatasets description.contact}}
                    <div class="col col--md-one-third col--lg-one-third margin-top">
                        {{!-- Related documents --}}
                        {{> partials/related/documents }}
						{{!-- Related datasets --}}
						{{> partials/related/datasets }}
                        {{!-- Contact details --}}
                        {{#if description.contact}}
                            {{> partials/contact }}
                        {{/if}}
                    </div>
                {{/if_any}}
            </div>
        </div>
{{/partial}}

