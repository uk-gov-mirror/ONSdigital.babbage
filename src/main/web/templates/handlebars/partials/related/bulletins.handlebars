{{#if relatedBulletins}}
	<div class="tiles__item tiles__item--nav-type flush-col print--hide">
		<h3 class="tiles__title-h3 tiles__title-h3--nav">{{labels.bulletin-related-bulletins}}</h3>
		<div class="tiles__content tiles__content--nav">
			<ul class="list--neutral">
				{{#each relatedBulletins}}
					{{#resolve this.uri filter="description"}}
						<li>
							<a href="{{uri}}"
                               data-gtm-title="{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}"
                               data-gtm-type="related-bulletin"
                            >{{description.title}}{{#if description.edition}}: {{description.edition}}{{/if}}</a>
						</li>
					{{/resolve}}
				{{/each}}
			</ul>
		</div>
	</div>
{{/if}}